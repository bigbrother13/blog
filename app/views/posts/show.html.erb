<article class="post">
  <section class="post-head">
    <h2><%= @post.title %></h2>
      <small>
        <time><%= @post.created_at.to_date.strftime("%d %B, %Y")%></time>
        |
        <%= link_to t('.edit'), edit_post_path(@post) %>
        |
        <%= link_to t('.delete'), post_path(@post), method: :delete, data: { confirm: 'Вы уверены' } %>
      </small>
  </section>
  <section class="post-summary">
    <%= image_tag @post.image_url(:large), class: 'img-show' if @post.image? %>
    <%= @post.body %>
  </section>
</article>

<%= render 'disqus' %>